<resources>

    <!-- the padding on the start of the statusbar -->
    <dimen name="status_bar_padding_start">16dp</dimen>

    <!-- the padding on the end of the statusbar -->
    <dimen name="status_bar_padding_end">5dp</dimen>

    <!-- Height of the status bar header bar when on Keyguard -->
    <dimen name="status_bar_header_height_keyguard">@*android:dimen/status_bar_height</dimen>

    <!-- Margin on the left side of the carrier text on Keyguard -->
    <dimen name="keyguard_carrier_text_margin">25dp</dimen>

    <!-- Location on the screen of the center of the physical power button. -->
    <dimen name="physical_power_button_center_screen_location_y">950px</dimen>

    <!-- Location on the screen of the center of the fingerprint sensor. -->
    <dimen name="physical_fingerprint_sensor_center_screen_location_y">1900px</dimen>

    <!-- Bottom margin size when fingerprint in display is active -->
    <dimen name="keyguard_indication_margin_bottom_fingerprint_in_display">25dp</dimen>

    <!-- Udfps fingerprint animation -->
    <dimen name="udfps_animation_offset">35dp</dimen>

</resources>
